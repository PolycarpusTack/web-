@asynccontextmanager
async def lifespan(app: FastAPI):
    logger.info("Initializing application")
    
    # Initialize rate limiter
    await FastAPILimiter.init(TTLCache(maxsize=1000, ttl=60))
    
    # Set up metrics if enabled
    if settings.enable_metrics:
