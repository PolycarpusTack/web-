  refreshTokens: (refreshToken: string): Promise<APIResponse<AuthTokens>> => {
    return safeFetch<AuthTokens>(
      '/api/auth/refresh',
      {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ refresh_token: refreshToken })
      }
    );
  },
  
  // Get current user info
