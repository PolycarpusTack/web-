    async def _execute_transform_step(
        self,
        step: PipelineStep,
        inputs: Dict[str, Any],
        context: Dict[str, Any]
    ) -> StepExecutionResult:
        """Execute a transform step, which transforms data."""
        try:
            # Extract required parameters
            transform_type = inputs.get("transform_type")
