                        // Download results as JSON
                        const blob = new Blob(
                          [JSON.stringify(execution.results, null, 2)], 
                          { type: 'application/json' }
                        );
                        const url = URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `pipeline-${pipeline.id}-results.json`;
